# API Keys (Required)
# ANTHROPIC_API_KEY=your_anthropic_api_key_here  # Removed - Using OpenRouter
OPENROUTER_API_KEY=YOUR_OPENROUTER_API_KEY_HERE  # Add your OpenRouter key

# --- API Configuration ---
# Model Configuration for AI features (Complexity Analysis, Task Expansion, etc.)
OPENROUTER_API_BASE="https://openrouter.ai/api/v1" # Default OpenRouter base URL
OPENROUTER_MODEL="google/gemini-2.5-pro-exp-03-25:free"         # Default model for OpenRouter (e.g., openai/gpt-4o, mistralai/mistral-7b-instruct)

# Configuration for --research flag (Uses OpenRouter)
RESEARCH_MODEL="openrouter/quasar-alpha"          # Model to use when --research flag is active

# General AI Model Settings
MAX_TOKENS=4000                   # Maximum tokens for model responses
TEMPERATURE=0.7                   # Temperature for model responses (0.0-1.0)

# --- Application Settings ---
# Logging Configuration
DEBUG=false                       # Enable debug logging (true/false)
LOG_LEVEL=info                    # Log level (debug, info, warn, error)

# Task Generation Settings
DEFAULT_SUBTASKS=4                # Default number of subtasks when expanding
DEFAULT_PRIORITY=medium           # Default priority for generated tasks (high, medium, low)

# Project Metadata (Optional)
PROJECT_NAME=Your Project Name    # Override default project name in tasks.json
